<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/leaves_background"
    android:gravity="center_horizontal">
    <RelativeLayout
        android:id="@+id/UserInformation"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="35dp"
        android:paddingLeft="20dp"
        android:paddingRight="20sp">
        <LinearLayout
            android:id="@+id/Login_Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_chevron_left_black_24dp"
                android:textColor="@color/white"
                android:clickable="true"
                android:onClick="returnToLogin"/>
            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:src="@drawable/profile"
                android:layout_marginLeft="200dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/WelcomeUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Login_Header"
            android:orientation="horizontal"
            android:paddingTop="15dp">
            <TextView
                android:id="@+id/Login_Intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/LoginHiHeading"
                android:paddingRight="10dp"
                android:textSize="30dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/Username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Username"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/CompanyIdentificationString"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/WelcomeUser"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/workAtIce"
                android:textColor="@color/white"
                android:textSize="16dp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/weekly_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CompanyIdentificationString"
            android:background="@drawable/button"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">
            <com.nex3z.togglebuttongroup.MultiSelectToggleGroup
                android:id="@+id/day_choices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.nex3z.togglebuttongroup.button.CircularToggle
                    android:id="@+id/monday_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Mon"/>
                <com.nex3z.togglebuttongroup.button.CircularToggle
                    android:id="@+id/tuesday_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Tue"/>

                <com.nex3z.togglebuttongroup.button.CircularToggle
                    android:id="@+id/wednesday_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/CompanyIdentificationString"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Wed" />
                <com.nex3z.togglebuttongroup.button.CircularToggle
                    android:id="@+id/thursday_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Thu"/>
                <com.nex3z.togglebuttongroup.button.CircularToggle
                    android:id="@+id/friday_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Fri"/>

            </com.nex3z.togglebuttongroup.MultiSelectToggleGroup>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/instructions"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weekly_schedule"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/LetMichKnow"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/instructions"
            android:gravity="bottom">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="@dimen/ButtonDIstanceFromBottom">
                <TextView
                    android:onClick="goToLeaderboard"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/button"
                    android:text="Confirm"
                    android:textColor="@color/colorDarkLeaf"
                    android:textSize="22dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>